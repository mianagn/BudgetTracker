<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="922.0" prefWidth="1358.0" style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #000000);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.HistoryController">

    <!-- Navigation Buttons -->
    <HBox alignment="CENTER" layoutY="10.0" spacing="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Button fx:id="HomeButton" onAction="#handleHomeButtonClick" style="-fx-background-color: grey; -fx-background-radius: 14;" text="Home">
            <font>
            <Font name="System Bold" size="20.0" />
         </font>
        </Button>
        <Button fx:id="StatisticsButton" onAction="#handleStatisticsButtonClick" style="-fx-background-color: grey; -fx-background-radius: 14;" text="Statistics">
            <font>
            <Font name="System Bold" size="20.0" />
         </font>
        </Button>
        <Button disable="true" style="-fx-background-color: grey; -fx-background-radius: 14;" text="History">
            <font>
            <Font name="System Bold" size="20.0" />
         </font>
        </Button>
    </HBox>


    <!-- Main Content Area -->
    <VBox layoutX="119.0" layoutY="150.0" spacing="20.0" AnchorPane.bottomAnchor="21.0" AnchorPane.leftAnchor="119.0" AnchorPane.rightAnchor="118.0" AnchorPane.topAnchor="150.0">

        <!-- Line Chart -->
        <LineChart fx:id="balanceTrendChart" prefHeight="353.0" title="Balance Trend" VBox.vgrow="ALWAYS">
            <xAxis>
                <CategoryAxis label="Date" tickLabelFill="WHITE" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Balance (€)" tickLabelFill="WHITE" />
            </yAxis>
        </LineChart>

        <!-- Transaction Table -->
        <TableView fx:id="allTransactionsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" />
                <TableColumn fx:id="categoryColumn" text="Category" />
                <TableColumn fx:id="amountColumn" text="Amount (€)" />
                <TableColumn fx:id="deleteColumn" maxWidth="70.0" minWidth="70.0" prefWidth="70.0" text="Delete" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

    </VBox>
</AnchorPane>
