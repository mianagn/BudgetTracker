<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="@styles.css" prefHeight="300" prefWidth="400" styleClass="login-background" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.LoginController">
    <VBox alignment="CENTER" layoutX="50" layoutY="60" prefHeight="300.0" prefWidth="400.0" spacing="10.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <Label alignment="CENTER" prefHeight="41.0" prefWidth="315.0" styleClass="login-title" text="Welcome to budget tracker">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>

        <TextField fx:id="usernameField" alignment="CENTER" maxHeight="355.0" maxWidth="280.0" minHeight="-Infinity" styleClass="login-input" promptText="Username">
            <font>
                <Font size="16.0" />
            </font>
        </TextField>

        <PasswordField fx:id="passwordField" alignment="CENTER" maxHeight="355.0" maxWidth="280.0" minHeight="-Infinity" styleClass="login-input" promptText="Password">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
            <font>
                <Font size="16.0" />
            </font>
        </PasswordField>

        <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="153.0" styleClass="error-label" text="" />

        <Button fx:id="loginButton" onAction="#handleLoginButton" styleClass="login-button" text="Login">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <font>
                <Font size="15.0" />
            </font>
        </Button>
    </VBox>
</AnchorPane>
